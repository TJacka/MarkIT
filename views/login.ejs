<div style="height: 100vh; width: 100vw;">
  <%- include('partials/header') -%>
    <main class="container flex row justify-content-center align-items-center m-auto signin-form" style="padding: 0 5px;">
        <section class="col-lg-6 col-md-10">
          <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
          <div class="alert alert-danger"><%= el.msg %></div>
          <% }) %> <% } %> <% if (locals.messages.info) { %> <%
          messages.info.forEach( el => { %>
          <div class="alert alert-info"><%= el.msg %></div>
          <% }) %> <% } %>
            <form action="/login" method="POST" class="p-4 p-md-5" style="box-shadow: 0 0 30px rgb(169, 169, 169); border-radius: 8px; border: 1px solid silver; background: rgb(249, 239, 239)">
              <h1 class="mb-4 mx-auto" style="font-weight: 700; margin-top: -5px;">Sign in</h1>
              <div class="form-floating mb-3">
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="name@example.com" name="email">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
              </div>
              <div class="form-floating mb-3">
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
                <label for="exampleInputPassword1" class="form-label">Password</label>
              </div>
              <div class="d-flex justify-content-center mt-4">
                <button class="btn py-2" style="font-weight: 600; font-size: 1.1rem;" id="btn-loginpage" type="submit">Sign in</button>
              </div>
            </form>
        </section>
    </main>
  <%- include('partials/footer') -%>
</div>