<div style="height: 100vh; width: 100vw;">
  <%- include('partials/headerauthin') -%>
    <main class="container col-xxl-8 py-5 card-container m-auto" style="padding: 0 5px; margin-top: 10px;">
      <div class="d-flex row justify-content-center align-items-center">
        <div class="p-4 p-md-5 col-lg-8 col-xxl-6 col-10" style="box-shadow: 0 0 30px rgb(169, 169, 169); border-radius: 8px; border: 1px solid silver; background: rgb(249, 239, 239); margin-top: 50px;">
          <h1 class="mb-4" style="font-weight: 700; margin-top: -5px;">Add a swipe</h1>
            <form action="/swipe/createSwipe" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                <label for="imgUpload" class="form-label" style="font-weight: 500">Swipe Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <div class="mb-3">
                <label for="title" class="form-label" style="font-weight: 500">Swipe Title</label>
                <input type="text" class="form-control" id="title" name="title" maxlength="50">
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label" style="font-weight: 500">Swipe Description</label>
                <input class="form-control" id="caption" name="caption" type="text" maxlength="100">
              </div>
              <div class="d-flex justify-content-center">
                <button type="submit" class="btn mt-3" id="btn-loginpage" value="Upload" style="margin-bottom: -5px; font-size: 1.1rem; font-weight: 600;">Submit</button>
              </div>
            </form>
        </div>
      </div>
    </main>
  <%- include('partials/footer') -%>
</div>