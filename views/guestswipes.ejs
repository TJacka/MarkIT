<%- include('partials/header') -%>

  <div class="container card-container">
    <div class="row row-cols-md-4">
      <% for(let i=0; i<posts.length; i++) {%>
      <div class="col mb-2">
        <div class="card h-100" style="margin-left: -5px; margin-right: -5px; box-shadow: 0 0 30px rgb(169, 169, 169); border-radius: 8px; border: 1px solid silver;">
          <img src="<%= posts[i].image%>" style="object-fit: cover; max-height: 290px;" class="card-img-top pt-2 px-2" alt="...">
          <div class="card-body">
            <h5 class="card-title" style="font-weight: 600;"><%= posts[i].title%></h5>
            <div style="height: 60px;">
              <p class="card-text;"><%= posts[i].caption %></p>
            </div>
            <!-- <p class="card-text"><i class="px-1 bi bi-heart"></i><%= posts[i].likes.length - 1 %></p> -->
            <div class="d-flex justify-content-between align-items-end">
              <a href="/signup" class="btn btn-outline-primary" style="font-weight: 600;">View Swipe</a>
              <span class="badge bg-success py-2"><%= posts[i].category%>Likes: signup</span>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>

<%- include('partials/footer') -%>

